generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid()) @map("_id")
  firstName String
  lastName  String
  email     String  @unique
  password  String
  familyId  String?

  family     Family?     @relation(fields: [familyId], references: [id])
  objectives Objective[]
  transactions Transaction[]
}

model Objective {
  id       String @id @default(uuid()) @map("_id")
  title    String
  total    Float
  userId   String
  familyId String

  creator User   @relation(fields: [userId], references: [id])
  family  Family @relation(fields: [familyId], references: [id])
}

model Family {
  id String @id @default(uuid()) @map("_id")

  members    User[]
  objectives Objective[]
}

model Transaction {
  id       String @id @default(uuid()) @map("_id")
  userId   String
  title    String
  amount    Float
  category String
  type     String
  isInstallment Boolean
  installmentCount   Int?
  
  creator User   @relation(fields: [userId], references: [id])
}